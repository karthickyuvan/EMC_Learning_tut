<input id="num1" placeholder="Enter the 1st Number">
<input id="num2" placeholder="Enter the 2nd Number">
<button onclick="add()" style="width: 300px;">Calculate</button>
<p id="result"></p>

<script>
    
    function add()
    {
        var num1 = parseFloat(document.getElementById("num1").value)
        var num2 = document.getElementById("num2")
        var result=document.getElementById("result")

        // var firstNo=Number(num1.value)
        var secondNo = Number(num2.value)
        var total = num1 + secondNo

        result.textContent= " the add of two number is " + total
    }

   


</script> 
